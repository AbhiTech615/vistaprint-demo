.hero {
  background: url('https://source.unsplash.com/1600x500/?printing') no-repeat center center/cover;
  color: white;
  text-align: center;
  padding: 100px 20px;
  margin-top: 0;
  padding-top: 0;
}


.hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero .btn {
  background-color: #ff6600;
  color: white;
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  border-radius: 5px;
  font-weight: bold;
}