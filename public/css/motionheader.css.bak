.motion-bg-video {
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  min-height: 25%;
  object-fit: cover;
  z-index: 1;
  opacity: 0.7;
  transition: transform 0.2s ease-out;
  background : red;
}

