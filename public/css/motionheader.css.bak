/* Motion blur header styles */
body {
  margin: 0;
  font-family: 'Georgia', serif;
  background: #fff;
  color: #060270;
  
}


.motion-header.scrolled {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.3);
}

.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.motion-nav ul {
  list-style: none;
  display: flex;
  gap: 40px;
  margin: 0;
  padding: 0;
}

.motion-nav a {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  transition: color 0.3s ease;
}

.motion-nav a:hover {
  color: #ffd700;
}

/* Extra subtle text motion effect */
.motion-title.motion-move {
  filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.9));
  transform: translateX(var(--move-x, 0)) translateY(var(--move-y, 0));
}

.motion-navbar {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  background-color:  #004080;;
  backdrop-filter: blur(10px);
  transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
}

.motion-navbar.scrolled {
  background-color: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}
.animated-blur-bg {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  filter: blur(60px);
  animation: blur-move 20s ease-in-out infinite alternate;
  z-index: -1;
}

@keyframes blur-move {
  0% {
    transform: translate(0, 0) scale(1);
  }
  100% {
    transform: translate(20%, 10%) scale(1.2);
  }
}


------------------------------------------------------------------------------------

.motion-showcase {
  position: relative;
  height: 90vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  background: #000;
  color: #fff;
  text-align: center;
}

.blur-background {
  position: absolute;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle at 30% 30%, #00c3ff, #005bea, #000);
  animation: blurMotion 8s linear infinite alternate;
  filter: blur(60px);
  z-index: 1;
}

@keyframes blurMotion {
  0% {
    transform: translate(-10%, -10%);
  }
  100% {
    transform: translate(10%, 10%);
  }
}

.motion-content {
  position: relative;
  z-index: 2;
}

.motion-heading {
  font-size: 3rem;
  font-weight: 500;
  margin-top: 5rem;
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease-out forwards;
  animation-delay: 0.3s;
}


.motion-subtitle {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease-out forwards;
  animation-delay: 0.6s;
}

.motion-btn {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease-out forwards;
  animation-delay: 0.9s;
}

.motion-btn:hover {
  background: #e64a19;
  transform: translateY(-3px);
}
