* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Segoe UI", sans-serif;
}

body {
  line-height: 1.6;
  color: #333;
  background: #f9f9f9;
}

---------------------------------nav---------------------

.navbar nav a {
  color: grey;
  margin-left: 1.5rem;
  text-decoration: none;
  font-weight: 500;
}

.navbar nav a:hover {
  text-decoration: underline;
}
---------------------------------motion-navbar-------------------------------


.motion-navbar {
  background-color: #2c3e50;
  padding: 10px 20px;
  animation: slideDown 1s ease-out;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}
.logo {
  height: 50px;
  margin-right: 20px;
}

.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #004080;
  padding: 10px 20px;
}


.navbar ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}

.navbar li {
  margin-left: 20px;
}

.navbar a {
  color: grey;
  text-decoration: none;
  font-weight: bold;
}

.nav-links {
  display: flex;
  gap: 30px;
  list-style: none;
  margin: 0;
  padding: 0;

  
}

.nav-links li a {
  color: purple;
  text-decoration: none;
  font-size: 18px;
  font-weight: 500;
  transition: transform 0.3s ease, color 0.3s ease;
}

.nav-links li a:hover {
  color: #f1c40f;
  transform: scale(1.1);
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

--------------------------------------------------------------------------------

header {
  background: #004080;
  color: dark blue;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-size: 1.5rem;
  font-weight: bold;
}

nav a {
  color: white;
  text-decoration: none;
  margin-left: 1.5rem;
}

.hero {
  background: url('https://source.unsplash.com/1600x500/?printing') no-repeat center center/cover;
  color: white;
  text-align: center;
  padding: 100px 20px;
}

.hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero .btn {
  background-color: #ff6600;
  color: white;
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  border-radius: 5px;
  font-weight: bold;
}

.features {
  padding: 2rem;
  text-align: center;
}

.product-grid {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 1.5rem;
}

.product-card {
  background: white;
  padding: 1rem;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  width: 200px;
}

.footer {
  background-color: #004080;
  color: white;
  text-align: center;
  padding: 1rem;
  margin-top: 2rem;
}

----------------------------For Catalog---------------------------------

.catalog {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
  justify-content: center;
}

.product-card {
  border: 1px solid #ccc;
  border-radius: 8px;
  width: 220px;
  text-align: center;
  padding: 15px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.product-card img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}
----------------------------For Product Details---------------------------------

.product-detail {
  display: flex;
  gap: 20px;
  padding: 20px;
  align-items: flex-start;
}

.product-detail img {
  width: 300px;
  height: auto;
  border-radius: 10px;
}

.product-detail div {
  max-width: 500px;
}

.product-detail h2 {
  margin-top: 0;
}
--------------------------------------Product page layout-----------------------------------------------------------

.product-page {
  display: flex;
  gap: 2rem;
  padding: 2rem;
}

.product-image img {
  width: 300px;
  border: 1px solid #ccc;
  border-radius: 8px;
}

.product-info {
  max-width: 600px;
}

.product-info h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.product-info .price {
  font-size: 20px;
  color: #007bff;
  margin-bottom: 15px;
}

.product-info button {
  background-color: #007bff;
  color: #fff;
  padding: 10px 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
--------------------------------------Cart-------------------------------

/* Cart Page Styles */
.cart-page h2 {
  margin-bottom: 20px;
  color: #333;
}

.cart-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.item-details h3 {
  margin-bottom: 5px;
  color: #444;
}

.item-details p {
  margin: 3px 0;
}

.btn-remove {
  padding: 8px 14px;
  background-color: #e74c3c;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.btn-remove:hover {
  background-color: #c0392b;
}

.cart-summary {
  margin-top: 30px;
  padding: 20px;
  border-top: 2px dashed #ccc;
  text-align: right;
}

.btn-checkout {
  padding: 12px 20px;
  background-color: #2ecc71;
  color: white;
  border: none;
  font-size: 16px;
  border-radius: 6px;
  cursor: pointer;
}

.btn-checkout:hover {
  background-color: #27ae60;
}

--------------------------------Checkout---------------------------------------

/* Container & layout */
.checkout-container {
  max-width: 480px;
  margin: 2rem auto;
  background: #fff;
  padding: 1.8rem 2rem;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Heading */
.checkout-container h2 {
  text-align: center;
  margin-bottom: 1.5rem;
  color: #222;
}

/* Form groups */
.form-group {
  margin-bottom: 1.3rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.4rem;
  font-weight: 600;
  color: #333;
}

.required {
  color: #e74c3c;
}

/* Inputs and textarea */
input[type="text"],
input[type="email"],
textarea,
select {
  width: 100%;
  padding: 0.55rem 0.75rem;
  border: 1.5px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
  transition: border-color 0.3s ease;
  box-sizing: border-box;
}

input[type="text"]:focus,
input[type="email"]:focus,
textarea:focus,
select:focus {
  border-color: #007bff;
  outline: none;
}

/* Textarea height */
textarea {
  resize: vertical;
  min-height: 80px;
}

/* Submit button */
.btn-submit {
  width: 100%;
  background-color: #007bff;
  border: none;
  padding: 0.85rem 0;
  color: #fff;
  font-weight: 600;
  font-size: 1.1rem;
  border-radius: 6px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn-submit:hover {
  background-color: #0056b3;
}

/* Responsive */
@media (max-width: 600px) {
  .checkout-container {
    margin: 1rem;
    padding: 1.5rem;
  }
}
